<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8B0000"
        android:padding="16dp"
        android:text="Rautekgriff – Schritt für Schritt"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/stepsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="In einer Notsituation kann es lebenswichtig sein, eine bewusstlose Person schnell aus einer Gefahrenzone zu bringen – etwa aus einem verrauchten Raum oder von einer befahrenen Straße. Der Rautekgriff ist eine effektive Rettungstechnik, mit der du eine Person sicher und mit möglichst geringem Kraftaufwand in Sicherheit bringen kannst. Der Rautekgriff darf nur angewendet werden, wenn akute Gefahr besteht und immer mit Vorsicht, um zusätzliche Verletzungen zu vermeiden. In den folgenden Schritten lernst du, wie du den Rautekgriff korrekt und sicher anwendest."
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginBottom="24dp" />

            <!-- Dynamische Schritt-Cards -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sobald du die Person aus der Gefahrenzone gebracht hast, prüfe erneut die Atmung und sichere sie ggf. in der stabilen Seitenlage. Bei Atemstillstand Reanimation beginnen."
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
