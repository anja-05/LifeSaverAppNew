<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Bild statt Text als Überschrift -->
    <ImageView
        android:id="@+id/imageViewLektionenWelle"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:src="@drawable/lektionen_welle"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Einführungstext -->
    <TextView
        android:id="@+id/textViewEinleitung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hier findest du verständliche Erklärungen zu den wichtigsten Erste-Hilfe-Themen. Du kannst dein Wissen direkt im Anschluss mit kurzen Quizfragen testen und festigen."
        android:textSize="15dp"
        android:textColor="#444444"
        android:layout_marginBottom="24dp" />

    <!-- RecyclerView für die Lektionen -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLektion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>

